#!/usr/bin/env ruby

$:.unshift(File.expand_path('../../lib', __FILE__))
$:.unshift(File.expand_path('../../../procodile/lib', __FILE__))

$stdout.sync = true
$stderr.sync = true

trap('USR1') { Bask.config.reload ; puts "Config reloaded" }

require 'bask'
require 'bask/web_server'
server = Bask::WebServer.new
server.run
